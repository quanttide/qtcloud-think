#!/bin/bash
# 运行 CLI 思维收集工具

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
CLI_DIR="$PROJECT_ROOT/src/cli"

cd "$CLI_DIR"

# 智能路由：meta 子命令或其他
if [ "$1" = "meta" ]; then
    shift
    uv run python app/main.py meta "$@"
else
    uv run python app/main.py collect "$@"
fi
